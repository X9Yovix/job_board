{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center check-your-email page-title">
            <!-- Page Title Start -->
            <section class="">
                <div class="lines">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </div>
            </section>
            <!-- Page Title End -->
            <p>
                If an account matching your email exists, then an email was just sent that contains a link that you can
                use to reset your password.
                This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData,
                'ResetPasswordBundle') }}.
            </p>
            <p>If you don't receive an email please check your spam folder or <a
                    href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
        </div>
    </div>
</div>
{% endblock %}