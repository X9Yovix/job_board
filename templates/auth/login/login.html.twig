{% extends 'base.html.twig' %}

{% block title %}Sign In
{% endblock %}

{% block body %}

<!-- Page Title Start -->
<section class="page-title title-bg12">
	<div class="d-table">
		<div class="d-table-cell">
			<ul>
				<li>
					<h2>Sign In</h2>
				</li>
			</ul>
		</div>
	</div>
	<div class="lines">
		<div class="line"></div>
		<div class="line"></div>
		<div class="line"></div>
	</div>
</section>
<!-- Page Title End -->

<!-- Sign In Section Start -->
<div class="signin-section ptb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-8 offset-md-2 offset-lg-3">
				<form method="post" class="signin-form">
					{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}
					<div class="form-group">
						<label>Enter Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail"
							class="form-control" autocomplete="email" required autofocus>
					</div>

					<div class="form-group">
						<label>Enter Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control"
							autocomplete="current-password" required>
					</div>

					<div class="signin-btn text-center">
						<button type="submit">Sign In</button>
					</div>

					<div class="other-signin text-center">
						<p>Forgot passwrd ?
							<a href="{{path('app_forgot_password_request')}}">Click here</a>
						</p>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>

					<div class="create-btn text-center">
						<p>Not have an account?
							<a href="{{path('app_register')}}">
								Create an account
								<i class='bx bx-chevrons-right bx-fade-right'></i>
							</a>
						</p>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<!-- Sign In Section End -->

{% endblock %}