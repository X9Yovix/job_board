<!-- Navbar Area Start -->
<div
	class="navbar-area">
	<!-- Menu For Mobile Device -->
	<div class="mobile-nav">
		<a href="#" class="logo">
			<img src="{{asset('img/logo.png')}}" alt="logo" width="45px">
		</a>
	</div>

	<!-- Menu For Desktop Device -->
	<div class="main-nav">
		<div class="container">
			<nav class="navbar navbar-expand-lg navbar-light">
				<a class="navbar-brand" href="{{path('app_index')}}">
					<img src="{{asset('img/logo.png')}}" alt="logo" width="45px">
				</a>
				<div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
					<ul class="navbar-nav m-auto">
						<li class="nav-item">
							<a href="{{ path('app_index') }}" class="nav-link{% if app.request.attributes.get('_route') == 'app_index' %} active{% endif %}">Home</a>
						</li>
						<li class="nav-item">
							{% if is_granted('ROLE_RECRUITER') %}
								<a href="{{ path('app_announcements') }}" class="nav-link{% if app.request.attributes.get('_route') == 'app_announcement_index' %} active{% endif %}">Jobs</a>
							{% else %}
								<a href="{{ path('app_announcements') }}" class="nav-link{% if app.request.attributes.get('_route') == 'app_announcement' %} active{% endif %}">Jobs</a>
							{% endif %}

						</li>
						<li class="nav-item">
							<a href="#" class="nav-link">About</a>
						</li>
						<li class="nav-item">
							<a href="#" class="nav-link">Contact Us</a>
						</li>
					</ul>

					<div class="other-option">
						{% if app.user %}
							<div class="collapse navbar-collapse" id="navbarNavDropdown">
								<ul class="navbar-nav">
									<li class="nav-item dropdown">
										<a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											<i class="bx bx-user-circle bx-md"></i>
										</a>
										<ul class="dropdown-menu custom-navbar">
											<li>
												<div class="d-flex align-items-center">
													<span class="text-center text-light m-auto w-100 h4 py-1">
														{{ app.user.firstName }}
														{{ app.user.lastName}}
													</span>
												</div>
											</li>
											<li>
												<hr class="dropdown-divider text-light">
											</li>
											<li>
												<a class="dropdown-item" href="{{ path('app_user_profile') }}">
													<div class="d-flex align-items-center">
														<i class='bx bxs-user-account bx-sm'></i>
														<span class="mx-2">Profile</span>
													</div>
												</a>
											</li>
											{% if is_granted('ROLE_RECRUITER') %}
												<li>
													<a class="dropdown-item" href="{{ path('app_recruiter_dashboard') }}">

														<div class="d-flex align-items-center">
															<i class='bx bxs-tachometer bx-sm'></i>
															<span class="mx-2">Dashboard</span>
														</div>

													</a>
												</li>
											{% endif %}
											<li>
												<a class="dropdown-item" href="{{ path('app_logout') }}">
													<div class="d-flex align-items-center">
														<i class='bx bxs-log-out bx-sm'></i>
														<span class="mx-2">Logout</span>
													</div>
												</a>
											</li>
										</ul>
									</li>
								</ul>
							</div>

						{% else %}
							<div>
								<a href="{{path('app_register')}}" class="signup-btn">Sign Up</a>
								<a href="{{path('app_login')}}" class="signin-btn">Sign In</a>
							</div>
						{% endif %}

					</div>
				</div>
			</nav>
		</div>
	</div>
</div>
<!-- Navbar Area End -->
