{% extends 'recruiter/dashboard/index.html.twig' %}

{% block title %}Company{% endblock %}

{% block content %}
    <h1>Company</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ company.logo }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ company.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ company.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_company_index') }}">back to list</a>

    <a href="{{ path('app_company_edit', {'id': company.id}) }}">edit</a>

    {{ include('recruiter/company/_delete_form.html.twig') }}
{% endblock %}
