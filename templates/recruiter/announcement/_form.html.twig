{{ form_start(form, { attr: { class: 'job-post-from' } }) }}
{# {{ form_errors(form) }} #}
<div class="row">
  <div class="col-md-12 mb-3">
    <div id="deadline">
      <label for="{{ form.deadline.vars.id }}">Deadline</label>
      <div class="row">
        <div class="col-md-6 m-auto">
          {{ form_row(form.deadline.date, { attr: { class: 'form-control' } }) }}
        </div>
        <div class="col-md-6 m-auto">
          {{ form_row(form.deadline.time, { attr: { class: 'form-control' } }) }}
        </div>
        {{ form_errors(form.deadline) }}
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">{{ form_row(form.title, { label: 'Job Title', attr: { class: 'form-control' } }) }}
    </div>
    {{ form_errors(form.title) }}
  </div>

  <div class="col-md-4">
    <div class="form-group">{{ form_row(form.experince, { label: 'Experince', attr: { class: 'form-control' } }) }}
    </div>
    {{ form_errors(form.experince) }}
  </div>

  <div class="col-md-4">
    <div class="form-group">{{ form_row(form.salary, { label: 'Salary (Optional)', attr: { class: 'form-control' } }) }}
    </div>
    {{ form_errors(form.salary) }}
  </div>

  <div class="col-md-4">
    <div class="form-group">
      {{ form_label(form.experince, 'Job Type') }}
      {{ form_widget(form.jobType, { attr: { class: 'category nice-select form-control' } }) }}
    </div>
    {{ form_errors(form.jobType) }}
  </div>

  <div class="col-md-4">
    <div class="form-group">
      {{ form_label(form.experince, 'Comapny Type') }}
      {{ form_widget(form.company, { attr: { class: 'category nice-select form-control' } }) }}
    </div>
    {{ form_errors(form.company) }}
  </div>

  <div class="col-md-4">
    <div class="form-group">
      {{ form_label(form.experince, 'Job Keywords') }}
      {{ form_widget(form.keywords, { attr: { class: 'form-control' } }) }}
    </div>
    {{ form_errors(form.keywords) }}
  </div>


  <div class="col-md-12">
    <div class="form-group">
      <label for="{{ form.description.vars.id }}">Job Description</label>
      {{ form_widget(form.description, { attr: { class: 'form-control description-area', required: 'required', rows: 6 }
      }) }}
    </div>
    {{ form_errors(form.description) }}
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <label>Job Requirements</label>
      {{ form_widget(form.requirements, { attr: { class: 'form-control description-area', required: 'required', rows: 6
      } }) }}
    </div>
    {{ form_errors(form.requirements) }}
  </div>

  <div class="col-md-12 text-center">
    <button class="post-btn">{{ button_label|default('Post A Job') }}</button>
  </div>
</div>
{{ form_end(form) }}

{% block javascripts %}
<script>
  $(document).ready(function () {
    $('#announcement_keywords').select2({
      tags: true,
      tokenSeparators: [',', ' ']
    });
    $("#deadline select").select2({ width: 'unset' });

  })
</script>
{% endblock %}