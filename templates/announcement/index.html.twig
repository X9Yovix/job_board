{% extends 'base.html.twig' %}

{% block title %}Announcement index{% endblock %}

{% block body %}
    <h1>Announcement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Requirements</th>
                <th>Location</th>
                <th>Salary</th>
                <th>CompanyName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {{ dump(announcements) }}
        {% for announcement in announcements %}
            <tr>
                <td>{{ announcement.id }}</td>
                <td>{{ announcement.title }}</td>
                <td>{{ announcement.description }}</td>
                <td>{{ announcement.requirements }}</td>
                <td>{{ announcement.location }}</td>
                <td>{{ announcement.salary }}</td>
                <td>{{ announcement.companyName }}</td>
                <td>
                    <a href="{{ path('app_announcement_show', {'id': announcement.id}) }}">show</a>
                    <a href="{{ path('app_announcement_edit', {'id': announcement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_announcement_new') }}">Create new</a>
{% endblock %}
